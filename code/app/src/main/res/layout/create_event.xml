<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Create Event Title -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_profile_title"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/create_event_title"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Create Event Button -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Save Button -->

        <Button
            android:id="@+id/saveButton"
            android:layout_width="278dp"
            android:layout_height="44dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/white"
            android:text="@string/save_changes"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionEditText" />

        <!-- Date of Event-->
        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:hint="@string/select_date"
            android:clickable="true"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/eventNameEditText"
            app:layout_constraintStart_toStartOf="@id/eventNameEditText"
            android:layout_marginTop="10dp"/>

        <!-- Geolocation Checkbox -->
        <CheckBox
            android:id="@+id/geolocationCheckBox"
            android:layout_width="338dp"
            android:layout_height="43dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:text="@string/enable_geolocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/generateQRButton" />

        <!-- Max attendees -->
        <EditText
            android:id="@+id/maxAttendeesEditText"
            android:layout_width="170dp"
            android:layout_height="47dp"
            android:hint="@string/max_attendees"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/timeEditText"
            app:layout_constraintStart_toStartOf="@id/timeEditText"
            android:layout_marginTop="10dp"/>

        <!-- Max waitlist -->
        <EditText
            android:id="@+id/maxWaitlistEditText"
            android:layout_width="217dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:hint="@string/max_on_waitlist"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="@id/maxAttendeesEditText"
            app:layout_constraintTop_toBottomOf="@id/maxAttendeesEditText" />

        <!-- Upload Poster Button -->
        <Button
            android:id="@+id/uploadPosterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="@string/upload_poster"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/maxWaitlistEditText" />

        <!-- QR Button -->
        <Button
            android:id="@+id/generateQRButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="@string/generate_qr_code"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uploadPosterButton" />

        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="114dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/geolocationCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/eventNameEditText"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="252dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="342dp"
            android:layout_height="47dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:hint="@string/description"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/geolocationCheckBox" />

        <!-- Time of Event -->
        <EditText
            android:id="@+id/timeEditText"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:hint="@string/select_time"
            android:clickable="true"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/dateEditText"
            app:layout_constraintStart_toStartOf="@id/dateEditText"
            android:layout_marginTop="10dp"/>

        <!-- Event Name -->
        <EditText
            android:id="@+id/eventNameEditText"
            android:layout_width="342dp"
            android:layout_height="41dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="92dp"
            android:hint="@string/event_name"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Navigation -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="376dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#FFFFFF"
        app:itemIconTint="#F497B7"
        app:itemTextColor="#4A4A4A"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/avatar_color_6"
        android:elevation="4dp"
        android:title="Event Details"
        android:titleTextColor="#FFFFFF" />

    <!-- Menu Panel with Four Buttons -->
    <LinearLayout
        android:id="@+id/menuPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonDetails"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Details"
            android:backgroundTint="@color/avatar_color_1"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/buttonWaitlist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Waitlist"
            android:backgroundTint="@color/avatar_color_1"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/buttonAttendees"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Attendees"
            android:backgroundTint="@color/avatar_color_1"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/buttonLocations"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Locations"
            android:backgroundTint="@color/avatar_color_1"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/detailsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:visibility="gone" />



</LinearLayout>

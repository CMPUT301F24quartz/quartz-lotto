<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    >

    <CheckBox
        android:id="@+id/checkbox_receive_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive All Notifications"
        android:checked="true" />

    <CheckBox
        android:id="@+id/checkbox_chosen_from_waiting_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Notifications When Chosen from Waiting List"
        android:checked="true" />

    <CheckBox
        android:id="@+id/checkbox_not_chosen_from_waiting_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Notifications If Not Chosen from Waiting List"
        android:checked="true" />

    <Button
        android:id="@+id/button_save_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Preferences"
        android:backgroundTint="#B76E79"/>

</LinearLayout>